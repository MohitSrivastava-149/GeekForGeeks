class Solution
{
    int columnWithMaxZeros(int arr[][], int n)
    {
            n = arr.length;
            int maxZeros = 0;
            int maxZeroColumnIndex =-1;
    
            for (int col = 0; col < n; col++) 
               {
                int zeroCount = 0;
                for (int row = 0; row < n; row++) 
                  {
                    if (arr[row][col] == 0)
                    {
                        zeroCount++;
                    }
                  }
      
                if (zeroCount > maxZeros)
                 {
                    maxZeros = zeroCount;
                    maxZeroColumnIndex = col;
                    if (maxZeros == n)
                     { 
                        break;
                    }
                }
            }
    
            return maxZeroColumnIndex;
        }
}
